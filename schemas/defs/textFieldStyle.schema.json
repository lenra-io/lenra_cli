{
    "$schema": "https://raw.githubusercontent.com/lenra-io/ex_component_schema/beta/priv/static/draft-lenra.json",
    "$id": "defs/textFieldStyle.schema.json",
    "title": "TextFieldStyle",
    "description": "Element of type TextFieldStyle",
    "type": "object",
    "properties": {
        "cursorColor": {
            "description": "The color of the cursor.",
            "$ref": "../defs/color.schema.json"
        },
        "cursorHeight": {
            "description": "The height of the cursor.",
            "type": "number"
        },
        "cursorRadius": {
            "description": "The radius of the cursor.",
            "$ref": "../defs/radius.schema.json"
        },
        "cursorWidth": {
            "description": "The width of the cursor.",
            "type": "number"
        },
        "decoration": {
            "description": "The decoration of the input.",
            "$ref": "../defs/inputDecoration.schema.json"
        },
        "keyboardAppearance": {
            "description": "The appearance of the keyboard.",
            "$ref": "../defs/brightness.schema.json"
        },
        "obscuringCharacter": {
            "description": "The character used to obscure the text.",
            "type": "string"
        },
        "scrollPadding": {
            "description": "The padding of the scrollable when the Textfield scrolls into view.",
            "$ref": "../defs/padding.schema.json"
        },
        "selectionHeightStyle": {
            "description": "The height of the selection highlight boxes.",
            "$ref": "../defs/boxHeightStyle.schema.json"
        },
        "selectionWidthStyle": {
            "description": "The width of the selection highlight boxes.",
            "$ref": "../defs/boxWidthStyle.schema.json"
        },
        "strutStyle": {
            "$ref": "../defs/strutStyle.schema.json"
        },
        "textStyle": {
            "description": "The style of the text.",
            "$ref": "../defs/textStyle.schema.json"
        },
        "textAlign": {
            "description": "The alignment of the text.",
            "$ref": "../defs/textAlign.schema.json"
        },
        "textAlignVertical": {
            "description": "How the text should be aligned vertically.",
            "$ref": "../defs/textAlignVertical.schema.json"
        }
    },
    "additionalProperties": false
}